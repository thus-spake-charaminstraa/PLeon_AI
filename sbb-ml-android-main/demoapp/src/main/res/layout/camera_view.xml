        <FrameLayout
            android:id="@+id/mlfragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <include android:id="@+id/bottom_sheet" layout="@layout/bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>